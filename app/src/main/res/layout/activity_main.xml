<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Texto_conversor"
        android:layout_width="305dp"
        android:layout_height="94dp"
        android:gravity="center"
        android:text="El conversor de unidades se usa introduciendo el valor numérico de temperatura en el campo “Valor”, y seleccionando la unidad con ayuda de los botones °C, °F o °K."
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="267dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33dp"
        android:gravity="center"
        android:text="Conversor de Unidades de Temperatura"
        android:textColor="#078322"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_temperatura"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="181dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:
        android:background="@drawable/button_background"
        android:text="ºC"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="417dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_background"
        android:text="ºF"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="417dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_background"
        android:text="ºK"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="417dp" />

    <TextView
        android:id="@+id/tabla_k"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@color/gray"
        android:fontFamily="@font/Roboto-Black"
        android:gravity="center"
        android:text="ºK"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="613dp" />

</androidx.constraintlayout.widget.ConstraintLayout>